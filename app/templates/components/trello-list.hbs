<div class="list">

    <div class="row">
        <div class="col-xs-10">
            <h2 class="titles_list">{{ list.title }}</h2>

        </div>
        <div class="col-xs-2">
            <button class="btn btn-link glyphicon glyphicon-plus" {{ action "showForm"}}></button>
        </div>
    </div>

    <div class="todos">
        <div class="form-hide">
            <form  {{action "addItem" on="submit" }}>
                {{textarea class="form-control" value=itemDescription }}
                <div class="actions">
                    <button type="submit" class="btn btn-success add">Añadir</button>
                    <button class="btn btn-link glyphicon glyphicon-remove red" {{ action "hideForm"}}></button>
                </div>
            </form>

        </div>

        <h4>Número de items: </h4>{{  list.items.length }}
        {{#each list.items as |item| }}
            {{#trello-item item=item}} {{/trello-item}}
        {{/each}}
    </div>

    <div class="actions text-center">
        <button class="btn btn-danger" {{action "delete"}} >Eliminar lista</button>

    </div>
</div>
